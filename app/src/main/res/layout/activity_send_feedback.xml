<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fundit.SendFeedbackActivity">

    <include layout="@layout/toolbar_center_text"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Full Name* :"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />


                <EditText

                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/unreadmeeageborder"
                    android:gravity="start|center"
                    android:text=""
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />


            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Email Id* :"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />


                <EditText

                    android:id="@+id/edt_subject"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/unreadmeeageborder"
                    android:gravity="start|center"
                    android:text=""
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Message* :"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/edt_message"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/listviewbackground"
                    android:gravity="start"
                    android:padding="5dp"
                    android:inputType="textMultiLine"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorButton"
                    android:text="Submit"
                    android:textAllCaps="false" />


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>



</LinearLayout>
