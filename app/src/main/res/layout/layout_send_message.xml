<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_center_text" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Message To:"
                android:textColor="@color/colorText"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txt_senderName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="start|center"
                android:text=""
                android:textColor="@color/colorText"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:padding="5dp"
                android:drawableRight="@drawable/star"
                android:text="Subject:"
                android:textColor="@color/colorText"
                android:textSize="16sp" />


            <EditText

                android:id="@+id/edt_subject"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/unreadmeeageborder"
                android:gravity="start|center"
                android:text=""
                android:padding="2dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorText"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:padding="5dp"
                android:drawableRight="@drawable/star"
                android:text="Message:"
                android:textColor="@color/colorText"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/edt_message"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/listviewbackground"
                android:gravity="start"
                android:padding="5dp"
                android:inputType="textMultiLine|textCapSentences"
                android:textColor="@color/colorText"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btn_send"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorButton"
                android:text="Send Message"
                android:textAllCaps="false" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
