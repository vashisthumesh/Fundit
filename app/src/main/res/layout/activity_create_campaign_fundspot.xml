<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.fundit.organization.CreateCampaignActivity">

    <include layout="@layout/toolbar_center_text"/>

    <ScrollView
        android:nestedScrollingEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_partnerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Fundspot Partner"
                android:textColor="@color/colorText"/>

            <AutoCompleteTextView
                android:id="@+id/auto_searchFundspot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_txt_border"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:hint="Search"
                android:minHeight="40dp"
                android:padding="5dp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/txt_browseFundspot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Browse Fundspots"
                android:textColor="@android:color/holo_blue_dark"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_itemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:drawableRight="@drawable/star"
                android:padding="5dp"
                android:text="Item being sold"
                android:textSize="16sp"/>

            <EditText
                android:visibility="gone"
                android:id="@+id/edt_itemName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:drawableRight="@drawable/star"
                android:padding="5dp"
                android:text="Cost of Coupon"
                android:textSize="16sp"/>

            <EditText
                android:visibility="gone"
                android:id="@+id/edt_couponCost"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:drawableRight="@drawable/star"
                android:padding="5dp"
                android:text="Percentage Split"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:padding="5dp"
                        android:text="Organization Percent"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/edt_organizationSplit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:padding="5dp"
                        android:text="Fundspot Percent"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/edt_fundSplit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:drawableRight="@drawable/star"
                android:padding="5dp"
                android:text="Duration of campaign"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_campaignDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="6"
                    android:background="@color/white"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Days"
                    android:textSize="16sp"/>

                <CheckBox
                    android:id="@+id/chk_indefinite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="Indefinite"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:drawableRight="@drawable/star"
                android:padding="5dp"
                android:text="Maximum Selling Limit"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/edt_maxLimitCoupon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:drawableRight="@drawable/star"
                android:padding="5dp"
                android:text="Coupon Expiration"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_couponExpireDay"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="6"
                    android:background="@color/white"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Days from purchase"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:drawableRight="@drawable/star"
                android:padding="5dp"
                android:text="Coupon fine print"
                android:textSize="16sp"/>

            <EditText
                android:visibility="gone"
                android:id="@+id/edt_finePrint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:lines="4"
                android:padding="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:drawableRight="@drawable/star"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:text="Product being sold"
                android:textSize="16sp"/>

            <ListView
                android:visibility="gone"
                android:id="@+id/list_selected_products"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:nestedScrollingEnabled="true"
                android:divider="@color/colorAccent"
                android:dividerHeight="1dp"
                android:scrollbars="none" />


            <Button
                android:id="@+id/btn_continue"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/colorButton"
                android:gravity="center"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="20sp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
