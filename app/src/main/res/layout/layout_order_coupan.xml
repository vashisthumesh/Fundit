<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listviewbackground"
    android:layout_margin="10dp"
    >
<LinearLayout
    android:id="@+id/layout_main"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Fundspot : "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_fundspot"
            android:text=""
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorTextSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>


    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="Campaign : "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_campaign"
            android:text=""
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorTextSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>


    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="Address : "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_address"
            android:text=""
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorTextSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_date"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="Expiration Date : "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_expdate"
            android:text=""
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorTextSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_itm"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="Item : "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_item"
            android:text=""
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorTextSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_coupon"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="Total Coupons : "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_coupons"
            android:text=""
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorTextSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>


</LinearLayout>


    <ImageView
        android:layout_weight="1"
        android:id="@+id/img_arrow"
        android:layout_gravity="center"
        android:src="@drawable/blackarrow"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />




</LinearLayout>
