<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.fundit.OrganizationProfileActivity">

    <include layout="@layout/toolbar_center_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <EditText
                android:id="@+id/tv_login_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:padding="5dp"
                android:text=""
                android:textSize="16sp"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/star"
                android:text="First Name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_firstName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:hint="Enter first name"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/star"
                android:text="Last Name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_lastName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:hint="Enter last name"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/black" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/star"
                android:text="Email"
                android:textSize="16sp" />

            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/black" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/star"
                android:text="Email"
                android:textSize="16sp" />

            <EditText
                android:visibility="gone"
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_member_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:hint="Address 1"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spn_state"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg"
                android:padding="5dp"
                android:popupBackground="#fff"
                android:spinnerMode="dropdown" />

            <Spinner
                android:visibility="gone"
                android:id="@+id/spn_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg"
                android:padding="5dp"
                android:popupBackground="#fff"
                android:spinnerMode="dropdown" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/star"
                android:text="City "
                android:textSize="16sp" />


            <EditText
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:hint="City"
                android:padding="5dp"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/star"
                android:text="Zip Code"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_zip_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:hint="Zip code"
                android:inputType="number"
                android:maxLength="5"
                android:padding="5dp"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioGroup
                    android:id="@+id/rg_selectType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/rb_organization"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Select Organization"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_fundspot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Select Fundspot"
                        android:textSize="14sp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
android:visibility="gone"
                android:id="@+id/layout_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_assOrganization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Associated Organization"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spn_assocOrganization"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_bg"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_assFundspot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Associated Fundspots"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spn_assocFundspot"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_bg"
                    android:hint=""
                    android:textColor="@color/black" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_contactInfo_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:hint="Email"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edt_contactInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:padding="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/star"
                android:text="Upload Photo"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img_profilePic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img" />

                <ImageView
                    android:id="@+id/img_remove"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top|end"
                    android:src="@drawable/ic_remove"
                    android:visibility="gone" />

            </FrameLayout>

            <Button
                android:id="@+id/btn_updateProfile"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/colorButton"
                android:gravity="center"
                android:text="Update Profile"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>