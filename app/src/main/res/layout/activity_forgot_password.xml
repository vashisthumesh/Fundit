<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.fundit.OrganizationProfileActivity">

    <include
        layout="@layout/toolbar_center_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/lv_forget_email"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:visibility="visible"
        android:paddingRight="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Email*"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/ed_forget_pass_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:background="@color/white"
            android:hint="E-mail id"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/colorButton"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt_send"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/colorButton"
                android:gravity="center"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/lv_forget_otp"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:visibility="visible"
        android:paddingRight="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="16sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ed_otp"
            android:inputType="number"
            android:background="@color/white"
            android:fontFamily="sans-serif"
            android:hint="Please enter Otp code"
            android:padding="5dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/ed_otp_continue"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/colorButton"
                android:gravity="center"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/lv_re_enter_password"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:visibility="visible"
        android:paddingRight="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="16sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:id="@+id/ed_new_password"
            android:hint="Enter your new password"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:id="@+id/ed_re_enter_password"
            android:hint="Please Re-Enter your password"
            android:inputType="textPassword"            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/bt_forget_update"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/colorButton"
                android:gravity="center"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>