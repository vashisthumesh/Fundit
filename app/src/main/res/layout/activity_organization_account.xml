<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.fundit.OrganizationAccountActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_center_text" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="First Name"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_fname"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:hint="First Name "
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/background_txt_border"
            android:textColorHint="@color/colorIcon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            android:visibility="gone"
            android:text="Last Name"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_lname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:fontFamily="sans-serif"
            android:hint="Last Name "
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/background_txt_border"
            android:textColorHint="@color/colorIcon" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_organization_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:hint="Organization Name "
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/background_txt_border"
            android:textColorHint="@color/colorIcon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_organization_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:hint="Email "
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/background_txt_border"
            android:textColorHint="@color/colorIcon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/background_txt_border"
            android:textColorHint="@color/colorIcon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/background_txt_border"
           />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_organization_comtinue"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/colorButton"
                android:gravity="center"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
